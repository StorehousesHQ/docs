{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Storehouses",
  "colors": {
    "primary": "#dcae47",
    "light": "#dcae47",
    "dark": "#dcae47"
  },
  "favicon": "/favicon.png",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "introduction",
              "quickstart",
              "account-setup",
              "adding-first-item"
            ]
          },
          {
            "group": "Core Features",
            "pages": [
              "features/dashboard",
              "features/adding-items",
              "features/collections",
              "features/locations",
              "features/search-filters"
            ]
          },
          {
            "group": "Asset Types",
            "pages": [
              "asset-types/overview",
              "asset-types/precious-metals",
              "asset-types/watches",
              "asset-types/gems",
              "asset-types/jewelry",
              "asset-types/wine",
              "asset-types/spirits",
              "asset-types/fine-art",
              "asset-types/arms-armor",
              "asset-types/other-collectibles"
            ]
          },
          {
            "group": "Portfolio Management",
            "pages": [
              "portfolio/viewing-items",
              "portfolio/editing-items",
              "portfolio/valuation-pricing",
              "portfolio/export-reporting",
              "portfolio/wealth-garden"
            ]
          },
          {
            "group": "Advanced Features",
            "pages": [
              "advanced/price-alerts",
              "advanced/sharing",
              "advanced/heir-access",
              "advanced/offline-mode"
            ]
          },
          {
            "group": "Account & Billing",
            "pages": [
              "account/settings",
              "account/subscription-plans",
              "account/billing",
              "account/security"
            ]
          },
          {
            "group": "Estate Managers",
            "pages": [
              "enterprise/overview",
              "enterprise/for-firms",
              "enterprise/for-clients",
              "enterprise/permissions",
              "enterprise/security"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Dashboard",
          "href": "https://storehouses.app/dashboard",
          "icon": "chart-line"
        },
        {
          "anchor": "Support",
          "href": "https://storehouses.app/dashboard?support=true",
          "icon": "headset"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.png",
    "dark": "/logo/dark.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Sign In",
        "href": "https://storehouses.app/login"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get Started",
      "href": "https://storehouses.app/register"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/getstorehouses",
      "instagram": "https://www.instagram.com/getstorehouses",
      "reddit": "https://www.reddit.com/r/getstorehouses",
      "github": "https://github.com/getstorehouses"
    }
  }
}
